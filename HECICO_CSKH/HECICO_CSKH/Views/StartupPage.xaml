<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
               xmlns:svg="clr-namespace:HECICO_CSKH.Controls"
             BackgroundColor="White"
              xmlns:core="clr-namespace:Syncfusion.XForms.Core;assembly=Syncfusion.Core.XForms" 
             xmlns:viewModel="clr-namespace:HECICO_CSKH.ViewModels.ErrorAndEmpty"
             NavigationPage.HasNavigationBar="False"
             xmlns:source="HECICO_CSKH.Views.ErrorAndEmpty"
             x:Class="HECICO_CSKH.Views.StartupPage">
    <ContentPage.BindingContext>
        <viewModel:NoInternetConnectionPageViewModel />
    </ContentPage.BindingContext>
                                       
    <svg:SVGImage 
                    x:Name="ErrorImage"
                    Margin="{x:OnIdiom Phone='0,0,0,0',
                                       Desktop='0',
                                       Tablet='0'}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"                    
                    Source = "startuppage.svg" 
                   />
</ContentPage>